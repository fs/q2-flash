.sign-up
  %header
    %h2 Registration
    = link_to 'Main', :root, :class => 'logo'
  %section
    .intro
      %h3 More Info
      %p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| 
      = devise_error_messages!
      .form-body
        .row
          %input{ :type => 'text', :value => 'First name', :class => 'required' }
          %input{ :type => 'text', :value => 'Title' }
        .row
          %input{ :type => 'text', :value => 'Last name', :class => 'required' }
          %input{ :type => 'text', :value => 'E-mail', :class => 'required' }
        .row
          %input{ :type => 'text', :value => 'Financial Institution ', :class => 'required' }
          %input{ :type => 'text', :value => 'Phone' }
        .row.textarea
          %textarea
            Comments
        
      .commented 
        = f.email_field :email 
        = f.password_field :password 
        = f.password_field :password_confirmation
        
      %footer
        = f.submit "Register"
      
  .commented 
    = render :partial => "devise/shared/links"
