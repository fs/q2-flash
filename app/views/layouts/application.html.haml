!!!
%html
  %head
    %title
      Q2 Flash
      = " - #{yield(:title)}" if content_for?(:title)
    = stylesheet_link_tag 'boilerplate', 'application'
    = javascript_include_tag :defaults, 'modernizr-1.6.min'
    = csrf_meta_tag
    = yield(:head)
  %body
    #container
      #navigation
        = render 'layouts/navigation'
      = content_tag :h1, yield(:title) if show_title? 
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      = yield
